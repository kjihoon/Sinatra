<div class="container mt-5 text-center">        
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">title</th>
      <th scope="col">body</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |p| %>
    <tr>
            <th scope="row"><%=p.id %></th>
            <td><%=p.title %></td>
            <td><%=p.body %></td>
            <td><%=p.created_at %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>